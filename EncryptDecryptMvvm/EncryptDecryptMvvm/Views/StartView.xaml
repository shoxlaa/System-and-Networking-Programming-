<UserControl x:Class="EncryptDecryptMvvm.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncryptDecryptMvvm.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<ListBox x:Name="__Models" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" ItemsSource="{Binding Models}" ItemTemplate="{StaticResource ModelTemplate}" />-->

        <Button Grid.Row="1" Grid.Column="0" Content="OpenFile" Margin="10 25" Command="{Binding AddCommand}"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Start Encrypting" Margin="10 25" Command="{Binding StartCommand}"/>

        <Button Grid.Row="1" Grid.Column="2" Content="Remove" Margin="10 25" Command="{Binding RemoveCommand}" CommandParameter="{Binding Path=SelectedItem, ElementName=__Models, Mode=TwoWay}"/>
    </Grid>

</UserControl>
